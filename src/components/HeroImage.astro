---
import profileMobile from "/assets/images/profile-image-desktop.webp";

import profileTablet from "/assets/images/profile-image-tablet.webp";

import profileDesktop from "/assets/images/profile-image-desktop.webp";
---

<picture class="fade">
  <source media="(max-width: 425px)" srcset={profileMobile} type="image/webp" />

  <source
    media="(min-width: 426px) and (max-width: 768px)"
    srcset={profileTablet}
    type="image/webp"
  />

  <source
    media="(min-width: 769px)"
    srcset={profileDesktop}
    type="image/webp"
  />

  <img
    src={profileMobile}
    alt="Profile of Mark Lawson"
    class="border-radius-2"
  />
</picture>

<style lang="scss">
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .fade {
    animation: fadeIn 3s ease-in-out;
  }

  @media (max-width: 425px) {
    picture {
      img {
        width: 90%;
        margin-inline: auto;
      }
    }
  }
</style>
