---
import { Icon } from "astro-icon";

const skills = [
  {
    name: "HTML",
    icon: "vscode-icons:file-type-html",
    experience: "5 + years",
  },
  {
    name: "CSS",
    icon: "vscode-icons:file-type-css",
    experience: "5 + years",
  },
  {
    name: "JavaScript",
    icon: "vscode-icons:file-type-js-official",
    experience: "3 years",
  },
  {
    name: "A11y",
    icon: "mdi:human",
    experience: "6 months",
  },
  {
    name: "React",
    icon: "vscode-icons:file-type-reactjs",
    experience: "2 years",
  },
  {
    name: "Nextjs",
    icon: "akar-icons:nextjs-fill",
    experience: "6 months",
  },
  {
    name: "Astro",
    icon: "simple-icons:astro",
    experience: "6 months",
  },
  {
    name: "WordPress",
    icon: "mdi:wordpress",
    experience: "5 + years",
  },
];
---

<section class="skills container space-xl divider padding-btm-2xl">
  <h2 class="space-xl uppercase underline">Skills</h2>
  <p class="space-l">These are the foundations.</p>
  <ul class="skills-list space-l">
    {
      skills.map((skill) => (
        <>
          <li class="skills-list-item flex column  align-center border-radius-2">
            <Icon name={skill.icon} class="skills-list-icon" />
            {skill.name} <span>{skill.experience}</span>
          </li>
        </>
      ))
    }
  </ul>
</section>

<style lang="scss">
  .skills {
    &-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(13rem, 1fr));
      grid-gap: var(--space-l);

      &-item {
        background-color: var(--clr-secondary);
        font-size: var(--step-2);
        font-weight: 700;
        padding: 0.7em;
      }

      &-icon {
        width: var(--step-5);
      }
    }
  }

  span {
    font-size: var(--step-0);
    font-weight: 300;
    opacity: 0.8;
  }

  h2::after {
    content: " - an evergrowing list! ";
    font-size: var(--step-0);
    text-transform: lowercase;
    font-weight: 300;
  }
</style>
