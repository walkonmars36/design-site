---
const { name } = Astro.props;
---

<label for={name} class="uppercase flex font-xs-step-2" id="filter"
  >{name}<input type="checkbox" name={name} id={name} /></label
>

<style>
  label {
    user-select: none;
    cursor: pointer;
    background-color: var(--color-filter-bg);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
  }

  :global(.light) label {
    color: var(--color-white);
  }

  label > input[type="checkbox"] {
    display: none;
  }

  label:hover,
  label:focus-within {
    background-color: var(--color-filter-bg-hvr);
    transform: scale(1.1);
    transition: transform 0.2s ease-in-out;
  }

  label:has(input[type="checkbox"]:checked) {
    box-shadow: 0 0 0 0.125rem var(--color-filter-shadow);
  }
</style>
