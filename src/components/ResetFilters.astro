<button class="btn uppercase flex font-xs-step-2" id="reset-btn"
  >Reset Filters</button
>

<style>
  #reset-btn {
    background-color: var(--clr-filter-bg);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    color: inherit;
    margin: 1rem 0;
  }

  :global(.light) #reset-btn {
    color: var(--clr-white);
  }

  #reset-btn:hover,
  #reset-btn:focus {
    transform: scale(1.1);
    transition: transform 0.2s ease-in-out;
    background-color: var(--clr-filter-bg-hvr);
  }

  #reset-btn:active {
    box-shadow: 0 0 0 0.125rem var(--clr-filter-shadow);
  }
</style>
